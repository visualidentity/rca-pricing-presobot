{% macro data(headerData) %}
{% set id = headerData.id %}
{% set pretitle = headerData.pretitle %}
{% set title = headerData.title %}
{% set subtitle = headerData.subtitle %}
{% set headingSize = headerData.headingSize %}
{% set subtitleLight = headerData.subtitleLight %}
{% set person = headerData.person %}
{% set role = headerData.role %}
{% set dropdown = headerData.dropdownFields %}
{% set dropdownData = headerData.dropdownData %}
{% set dropdownTwoData = headerData.dropdownTwoData %}
{% set dropdownThreeData = headerData.dropdownThreeData %}
{% set dropdownFourData = headerData.dropdownFourData %}
{% set dropdownFiveData = headerData.dropdownFiveData %}
{% set inversed = headerData.inversed %}
{% set advantageLogo = headerData.advantageLogo %}
{% set refresh = headerData.refresh %}
{% set hardRefresh = headerData.hardRefresh %}
{% set customClass = headerData.customClass %}
{% set category = headerData.category %}
{% set agent = headerData.agent %}

	<div class="header {{ customClass }}">

		{% if category %}
			<dl>
				<dd class="category">
						{{ category }}
				</dd>
		</dl>
		{% endif %}

		{% if refresh %}
			<div class="header__refresh" data-header-refresh>
				Refresh
			</div>
		{% endif %}

		{% if hardRefresh %}
			<div class="header__refresh header__refresh--hard" data-header-refresh>
				Refresh
			</div>
		{% endif %}

		{% if advantageLogo %}
			<div class="header__advantage"></div>
		{% endif %}

		{% if subtitle %}
			<h6 
				class="header__pretitle"
			>{{ pretitle|safe }}</h6>
		{% endif %}

		<h2 
			class="header__title {% if headingSize %}header__title--{{ headingSize }}{% endif %} {% if inversed %}header__title-inversed{% endif %}"
			{% if id %}data-companywide-editable="{{ id }}"{% endif %}
		>{{ title|safe }}</h2>

		{% if subtitle %}
			<h3 
				class="header__subtitle {% if subtitleLight %}header__subtitle--light{% endif %} {% if headingSize %}header__subtitle--{{ headingSize }}{% endif %} {% if inversed %}header__subtitle-inversed{% endif %}"
				{% if id %}data-companywide-editable="{{ id }}--subtitle"{% endif %}
			>{{ subtitle|safe }}</h3>
		{% endif %}

		{% if person %}
			<div class="header__profile">
				<div class="header__profile--image" data-companywide-dynamic-image="{{ person|replace(' ', '-')|urlencode|replace('%', '') }}--image"></div>
				<div class="header__profile-text">
					<strong data-companywide-editable="{{ person|replace(' ', '-')|urlencode|replace('%', '') }}">{{ person }}</strong>
					<div data-companywide-editable="{{ role|replace(' ', '-')|urlencode|replace('%', '') }}">{{ role }}</div>
				</div>
			</div>
		{% endif %}

		{% if dropdown %}
			{% if dropdown == 2 %}
				<div class="header__input">
					<div class="header__input-dropdown" id="header-dropdown-1">
						<h6 class="input-label">{{ dropdownData[0].title }}</h6>
						<div class="header__input-dropdown--results">
							{% for item in dropdownData %}
								<div class="results__child {% if loop.index == 1 %}strong{% endif %}" value="{{ item.value }}">{{ item.title }}</div>
							{% endfor %}
						</div>
					</div>
